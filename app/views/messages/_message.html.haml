.chat__items
  .chat__items__name
    = message.user.name
  .chat__items__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat__message
  - if message.content.present?
    %p.chat__message__content
      = message.content
  = image_tag message.image.url, class: 'chat__message__image' if message.image.present?
  